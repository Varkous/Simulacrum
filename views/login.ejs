            </select>
          </div>

          <br>

          <div class="form-block" style="border: 1px double gray; padding: 5px">
            <div class="res-message">
            </div>

            <div id="codeForm" class="form-block hide">
              <i class="fa fa-info-circle info-icon-1"></i>
              <input id="confirmCode" class="input" type="text" name="code" value="" maxlength=5 style="min-height: 80px; max-width: 140px;" disabled>
            </div>

          </div>

        </fieldset>

        <button id="register" class="input" type="submit">SUBMIT</button>
        <button name="button" type="button" style="color: gray;" onclick="showForm(this, forms[0])">BACK</button>
      </form>
