  <body>
    <main class="container">

      <img id="logo" src="/TNT Logo 4.png" alt="">
      <img id="title" src="Simulacrum Title.png" alt="">

      <form id="mainForm" action="/login" method="POST">

        <fieldset disabled>
          <div class="form-block">
            <label for="name">Username (or Email)</label>
            <input id="UN" class="input" type="text" name="name" minlength="5" required>
          </div>

          <div class="form-block">
            <label for="password">Password </label>
            <input id="PW" class="input" type="password" name="password" minlength="6" maxlength="20" required>
          </div>
        </fieldset>

        <button class="input" type="submit" name="button">LOGIN</button>
        <button name="button" type="button" style="color: lightblue; margin-top: 40%;" onclick="showForm(this, forms[1])">REGISTER</button>

      </form>
<!-- ========================================================================== -->
    <hr>


      <form id="newUserForm" action="/new" method="POST" hidden>
        <h5>Create a new profile</h5>

        <fieldset disabled>
          <div class="form-block">
            <label for="name">Username</label>
            <input class="input" type="text" name="name" minlength="6" maxlength="20" required>
          </div>

          <div class="form-block">
            <label for="password">Password</label>
            <input class="input" type="password" name="password" minlength="8" maxlength="20" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*?[0-9])(?=.*?[!@#$%^*+`~=?\|<>/]).{8,}">
          </div>

          <div class="form-block">
            <label for="email">Email</label>
            <input class="input" type="email" name="email" minlength=8 required pattern="[^ @]*@[^ @]*">
          </div>

          <div class="form-block">
            <label for="state">Location</label>
